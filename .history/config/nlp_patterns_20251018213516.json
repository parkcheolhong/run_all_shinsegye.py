{
  "intents": {
    "refactor": {
      "patterns": [
        ".*코드.*정리.*",
        ".*리팩터링.*",
        ".*리팩토링.*",
        ".*코드.*개선.*",
        ".*코드.*정돈.*",
        ".*코드.*깔끔하게.*",
        ".*정리해.*줘.*",
        ".*깨끗하게.*만들어.*",
        ".*코드.*가독성.*",
        ".*구조.*개선.*",
        ".*코드를.*다시.*작성.*",
        ".*더.*좋게.*만들어.*",
        ".*개선.*시켜.*줘.*"
      ],
      "response_templates": [
        "코드 리팩터링을 시작합니다.",
        "코드를 정리하고 개선하겠습니다.",
        "코드 구조를 개선하겠습니다."
      ]
    },
    "sync": {
      "patterns": [
        ".*깃.*동기화.*",
        ".*git.*sync.*",
        ".*깃허브.*연동.*",
        ".*소스.*동기화.*",
        ".*백업.*해.*줘.*",
        ".*commit.*push.*",
        ".*저장소.*업데이트.*",
        ".*변경.*사항.*올려.*",
        ".*업로드.*해.*줘.*",
        ".*푸시.*해.*줘.*"
      ],
      "response_templates": [
        "깃허브와 동기화를 시작합니다.",
        "소스 코드를 동기화하겠습니다.",
        "변경사항을 깃허브에 업로드하겠습니다."
      ]
    },
    "stop": {
      "patterns": [
        ".*종료.*",
        ".*끝.*",
        ".*그만.*",
        ".*정지.*",
        ".*멈춰.*",
        ".*닫아.*",
        ".*shutdown.*",
        ".*exit.*",
        ".*quit.*",
        ".*소리새.*안녕.*"
      ],
      "response_templates": [
        "소리새를 종료합니다.",
        "시스템을 안전하게 종료하겠습니다.",
        "작업을 마치고 종료합니다."
      ]
    },
    "help": {
      "patterns": [
        ".*도움말.*",
        ".*help.*",
        ".*무엇.*할.*수.*있.*",
        ".*어떤.*명령.*",
        ".*기능.*알려.*줘.*",
        ".*사용법.*",
        ".*명령어.*목록.*",
        ".*뭐.*할.*수.*있어.*",
        ".*설명.*해.*줘.*"
      ],
      "response_templates": [
        "소리새의 기능들을 설명해드리겠습니다.",
        "사용 가능한 명령어들을 알려드리겠습니다.",
        "도움말을 제공하겠습니다."
      ]
    },
    "greeting": {
      "patterns": [
        ".*안녕.*",
        ".*hello.*",
        ".*hi.*",
        ".*좋은.*아침.*",
        ".*좋은.*오후.*",
        ".*좋은.*저녁.*",
        ".*반가워.*",
        ".*소리새.*"
      ],
      "response_templates": [
        "안녕하세요! 무엇을 도와드릴까요?",
        "반갑습니다! 어떤 작업을 하시겠어요?",
        "소리새입니다. 명령을 말씀해주세요."
      ]
    },
    "status": {
      "patterns": [
        ".*상태.*확인.*",
        ".*어떻게.*돌아가.*",
        ".*시스템.*상태.*",
        ".*잘.*동작.*",
        ".*문제.*없.*",
        ".*정상.*동작.*",
        ".*status.*",
        ".*health.*check.*"
      ],
      "response_templates": [
        "시스템이 정상적으로 동작하고 있습니다.",
        "모든 기능이 정상입니다.",
        "소리새가 건강하게 동작 중입니다."
      ]
    }
  },
  "context_patterns": {
    "positive_confirmation": [
      ".*네.*", ".*예.*", ".*맞아.*", ".*좋아.*", 
      ".*그래.*", ".*계속.*", ".*진행.*", ".*yes.*", ".*ok.*"
    ],
    "negative_confirmation": [
      ".*아니.*", ".*싫어.*", ".*안.*해.*", ".*취소.*", 
      ".*그만.*", ".*no.*", ".*cancel.*"
    ]
  }
}